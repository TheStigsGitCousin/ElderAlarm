<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.crunchyonioncoolkit.elderalarm.AlarmActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="visible">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/cancel_button_text"
        android:background="@color/red"
        android:id="@+id/cancelButton"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:columnCount="1"
        android:rowCount="3"
        android:id="@+id/pulse_layout"
        android:alignmentMode="alignMargins"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pulse_start_value"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/heart_rate_font_size"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/pulse_textView"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pulse_info_text"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/heart_rate_info_font_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_go_back_text"
            android:id="@+id/gobackButton"
            android:textSize="@dimen/alarm_go_back_font_size"
            android:layout_below="@+id/pulse_textView"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:background="#E9CEA8" />
    </RelativeLayout>


</LinearLayout>
